@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}
<div class="flex-container">
    <div class="row text-center">
        <div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4" style="padding-top:10%;">
            <section class="panel dash-panel">
                <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                    <div class="form-horizontal">
                        <h2 class="text-center">Login</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">

                            <div class="col-md-10 col-md-offset-1">
                                <input asp-for="Email" placeholder="Username" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-10 col-xs-offset-1">
                                <input asp-for="Password" placeholder="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            @*<div class="col-md-6 text-center">
                                <div class="checkbox">
                                    <label asp-for="RememberMe">
                                        <input asp-for="RememberMe" />
                                        @Html.DisplayNameFor(m => m.RememberMe)
                                    </label>
                                </div>
                            </div>*@
                            <div class="col-xs-10 col-xs-offset-1 text-center">
                                <button type="submit" class="btn btn-lg btn-primary" style="width:100%;">Log in</button>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-10 col-xs-offset-1 text-center">
                                <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="btn btn-lg btn-secondary">Register</a>
                                <a asp-action="ForgotPassword" class="btn btn-lg btn-secondary">Forgot details</a>

                            </div>
                </form>
            </section>
        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
