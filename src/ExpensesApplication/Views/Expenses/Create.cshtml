@model ExpensesApplication.Models.Expense

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel dash-panel">
            <form method="post" asp-action="Create" asp-controller="Expenses" enctype="multipart/form-data" id="create-form">
                <!--<form method="post" asp-action="Create" asp-controller="Expences" enctype="multipart/form-data">-->
                <div class="form-horizontal">
                    <h2 class="text-center">Create an Expense</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <div class="col-md-10 col-md-offset-1">
                            <label class="col-md-3 control-label">Chargeable?</label>
                            <div class="col-md-6 text-center">
                                <div class="switch switch-square"
                                     data-on-label="chargeable"
                                     data-off-label="not chargeable">
                                    <input asp-for="Chargeable" type="checkbox" class="form-control input-lg" />
                                    <div asp-validation-for="Chargeable" class="text-danger"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10 col-md-offset-1">
                            <label asp-for="ProjectCode" class="col-md-3 control-label"></label>
                            <div class="col-md-4 col-md-offset-1 text-center">
                                <input asp-for="ProjectCode" class="form-control input-lg" />
                                <span asp-validation-for="ProjectCode" class="text-danger" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10 col-md-offset-1">
                            <label asp-for="ExpenseDate" class="col-md-3 control-label "></label>
                            <div class="col-md-4 col-md-offset-1 text-center">
                                <input asp-for="ExpenseDate" class="form-control input-lg" size="16" type="date">
                                <!-- <input asp-for="ExpenseDate" class="form-control input-lg" />-->
                                <span asp-validation-for="ExpenseDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="col-md-5 col-md-offset-1">
                            <label asp-for="Expensetype" class="col-md-6 control-label"></label>
                            <div class="col-md-6 text-center">
                                <select asp-for="Expensetype" class="form-control input-lg">
                                    <option value="General"> General</option>
                                    <option value="Mileage">Mileage</option>
                                    <option value="PerDiem">Per Diem</option>
                                    <option value="CC"> Credit Card</option>
                                </select>
                                <span asp-validation-for="Expensetype" class="text-danger" />
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div id="expenseCC" style="display:none;">
                                <label asp-for="CCExpenseType" class="col-md-6 control-label"></label>
                                <div class="col-md-6 text-center">
                                    <select asp-for="CCExpenseType" class="form-control input-lg">
                                        <option disabled selected value=""> Choose </option>
                                        <option value="Flight">Flight</option>
                                        <option value="Hotel">Hotel</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span asp-validation-for="CCExpenseType" class="text-danger" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-5 col-md-offset-1 text-center">
                            <label asp-for="Currency" class="col-md-6 control-label"></label>
                            <div class="col-md-6 text-center">
                                <select asp-for="Currency" class="form-control input-lg">
                                    <option value="euro">&euro;</option>
                                    <option value="sterling">&pound;</option>
                                </select>
                                <span asp-validation-for="Currency" class="text-danger" />
                            </div>
                        </div>
                        <div class="col-md-5">
                            <label asp-for="Amount" class="col-md-6 control-label"></label>
                            <div class="col-md-6">
                                <input asp-for="Amount" class="form-control input-lg" type="number" />
                                <span asp-validation-for="Amount" class="text-danger" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10 col-md-offset-1 ">
                            <label asp-for="Image" class="col-md-3 control-label"></label>
                            <div class="col-md-4 col-md-offset-1 text-center">
                                <label for="file-upload" class="btn btn-lg btn-primary">Choose File</label>
                                <input asp-for="Image" id="file-upload" type="file" name="files" accept="image/*" />
                                <span asp-validation-for="Image" class="text-danger"></span>
                                
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-4 col-md-offset-4 text-center">
                            <a asp-action="Index2"><div class="btn btn-lg btn-secondary">Cancel</div></a>
                            <input type="submit" class="btn btn-lg btn-primary" value="Create" />
</div>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
